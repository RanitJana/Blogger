<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blogger</title>
    <link rel="stylesheet" href="/styles/login.css">
    <link rel="shortcut icon" href="/images/blogger.png" type="image/x-icon">
    <script>
        // Immediately set theme based on localStorage
        (function () {
            const theme = localStorage.getItem('theme') || (window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light');
            document.documentElement.setAttribute('data-theme', theme);
        })();
    </script>
</head>

<body>
    <div class="blockRequest">
        <img src="/images/load-icon-png-7963.png" alt="Loading..." decoding="async">
    </div>
    <form action="/login" method="post">
        <h1>Log in</h1>
        <%- include("./messages/message.ejs") -%>
            <div class="content">
                <input type="email" name="email" id="email" required>
                <span>email</span>
            </div>
            <div class="content">
                <input type="password" name="password" id="password" required>
                <span>password</span>
            </div>
            <input type="submit" class="login" value="Log in"><br>
            <a href="/register" class="register">New in Blogger?</a>
    </form>

    <script>
        function block() {
            document.querySelector('.blockRequest').style.transform = 'translateY(0%)';
        }
        document.querySelector('.login').addEventListener("click", e => {
            let ans = true;
            document.querySelectorAll('input').forEach(val => {
                if (!val.value) ans = false;
            })
            if (ans) block();
        })
        document.querySelector(".register").addEventListener("click", e => {
            block();
        })
    </script>
</body>

</html>